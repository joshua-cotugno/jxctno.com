
<!DOCTYPE html>
<html>
  <head>
    <title>My Chemical Romance Random Lyrics Generator</title>
  </head>
  <body>
    <h1>My Chemical Romance Random Lyrics Generator</h1>
    <button id="generate-lyrics">Generate Lyrics</button>
    <div id="lyrics"></div>
    <script>const apiKey = '81052b1e2cc52a9116e9a93688b75b09'; // Replace with your Musixmatch API key

// Function to fetch random lyrics from My Chemical Romance songs
async function getRandomLyrics() {
  const response = await fetch(
    `https://api.musixmatch.com/ws/1.1/track.search?q_artist=my%20chemical%20romance&s_track_rating=desc&page_size=100&page=1&apikey=${apiKey}`
  );
  const data = await response.json();
  const tracks = data.message.body.track_list;
  const randomTrackIndex = Math.floor(Math.random() * tracks.length);
  const trackId = tracks[randomTrackIndex].track.track_id;
  const responseLyrics = await fetch(
    `https://api.musixmatch.com/ws/1.1/track.lyrics.get?track_id=${trackId}&apikey=${apiKey}`
  );
  const dataLyrics = await responseLyrics.json();
  const lyrics = dataLyrics.message.body.lyrics.lyrics_body;
  return lyrics;
}

// Function to generate lyrics on button click
document.getElementById('generate-lyrics').addEventListener('click', async () => {
  const lyrics = await getRandomLyrics();
  document.getElementById('lyrics').innerText = lyrics;
});
</script>
  </body>
</html>
